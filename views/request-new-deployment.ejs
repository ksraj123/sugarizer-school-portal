<%- include('header') %>

<nav class="navbar navbar-transparent navbar-absolute">
  <div class="container-fluid">
  </div>
</nav>
<div class="main-content">
  <div class="container-fluid">
    <div class="row" style="margin-top:100px;">
      <div class="col-lg-4 col-md-3 col-sm-12"></div>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <h3 class="text-center" style="font-size: 3em;">Sugarizer School Portal</h3>
        <h5 class="text-center">New Deployment Request</h5>
        <div class="card card-nav-tabs">
            <div class="card-content">
              <form method="post" action="/schoolconsole/request">
                <div class="form-group form-black label-floating is-empty">
                    <input class="form-control" name="schoolName" type="text" placeholder="School Name">
                    <span class="material-input"></span>
                </div>
                <div class="form-group form-black label-floating is-empty">
                    <input class="form-control" name="schoolId" type="password" placeholder="School Id">
					          <input id="formlang" type="hidden" name="lang">
                    <span class="material-input"></span>
                </div>
                <div class="form-group form-black label-floating is-empty">
                    <textarea class="form-control" name="other" type="text" placeholder="Other Information"></textarea>
                    <input id="formlang" type="hidden" name="lang">
                    <span class="material-input"></span>
                </div>
                <button class="btn pull-right" type="submit" data-l10n-id="login">Request<div class="ripple-container"></div></button>
                <div class="clearfix"></div>
              </form>
            </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-3 col-sm-12"></div>
    </div>
  </div>
</div>

